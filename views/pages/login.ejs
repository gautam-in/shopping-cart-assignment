<% include ../common/header %>
<!-- Login content starts here -->
<div class="container clearfix">
    <div class="login-area clearfix" id="login-area">
        <div class="login-info">
            <h1>Login</h1>
            <p>Get access to your orders. Whishlist and Recommendations</p>
        </div>
        <div class="login-form">
            <form method="GET" class="floating-input-form" id="login-form" name="login-form" action="/">
                <div class="form-group">
                    <input type="email" class="form-control" id="email" onfocusout="validationForLabel('email')">
                    <label class="form-label">Email</label>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="password" onfocusout="validationForLabel('password')">
                    <label class="form-label">Password</label>
                </div>
                <button type="submit" class="btn btn-block btn-primary">Login</button>
            </form>
        </div>
    </div>
</div>
<!-- Login content ends here -->
<% include ../common/footer %>