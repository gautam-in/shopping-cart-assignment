<main class="cart_main" id="cart">
    <div class="cart">
        <h4 class="cart_header">{{name}}
            My Cart({{itemCounter}} item)<a href="/"><i class="fa fa-close" aria-hidden="true"></i></a>
        </h4>
        
        <section class="cart_content">
            {{#each productInCart}}
            <div class="cart_items">
                <img src={{imageURL}} width="10%" />
                <div class="item_cal">
                    <strong>{{name}}</strong>
                    <div>
                        <i class="fa fa-minus" aria-hidden="true" onclick="addRemoveItem('{{id}}',{{@index}},{{price}},'minus')"></i>
                        <span id="prod{{@index}}">{{count}}</span>
                        <i class="fa fa-plus" aria-hidden="true" onclick="addRemoveItem('{{id}}',{{@index}},{{price}},'plus')"></i>
                        <i class="fa fa-times" aria-hidden="true"></i>
                        <span>Rs{{price}}</span>
                        <span class="total_amt" id="totalp{{@index}}">Rs{{totalPrice}}</span>
                    </div>
                </div>
            </div>
            {{/each}}
            <div class="cart-caption">
                <img src="/images/lowest-price.png" alt="" width="30%" />
                <p>You won't find it cheaper anywhere</p>
            </div>
        </section>
        
        <section class="cart_footer">
            <p>Promo code can be applied on payment page
                <a class="btn" href="#">Proceed to Checkout
                    <span id="total_checkout_amt">Rs187</span><i class="fa fa-angle-right" aria-hidden="true"></i>
                </a>
            </p>

        </section>
    </div>
</main>