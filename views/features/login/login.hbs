<section class="row login-section">
		<div class="col span-1-of-2 login-text">
			 {{> atoms/a-header text="Login"}}
			 {{> atoms/a-desc text="Get access to your Orders, Wishlist and Recommendations"}}
		</div>
		<div class="col span-1-of-2">
			<form class="login-form" action="/" method="get">
			  {{> molecules/m-forminput  type="email" name="email" placeholder="Email" labelText="Email" id="email"}}
			  {{> molecules/m-forminput type="password" name="password" placeholder="Password"  labelText="Password" id="password"  oninvalid="checkPassword(this);" oninput="checkPassword(this);"}}
			  {{> atoms/a-button type="submit" class="login-btn" btntext="Login"}}
			</form>
		</div>
</section>

