{{>header cartTotal=cartTotal cartData=cartData}}
<main class="container productContainer">
    <aside class="category">
        <h3>{{#if catGoryname}}{{catGoryname}}{{else}}Choose any category{{/if}}<span>&#8595;</span></h3>
        <ul>
            {{#each categories}}
            <li><a href="/products/{{key}}">{{name}}</a></li>
            {{/each}}
        </ul>
    </aside>
    <div class="productList">
        {{#each products}}
        <div class="productList-item">

            <div class="w-100">
                <h3>{{name}}</h3>
            </div>
            <div class="productList-media">
                <img class="fluid-image" alt="{{name}}" src={{imageURL}} />
            </div>
            <div class="productList-tool">
                <div class="productList-description font-12 greybg">{{description}}</div>
                <div class="w-100 d-flex flex-wrap align-items-center">
                    <span class="priceDesktop">MRP Rs.{{price}}</span>
                    <a class="addToCart hidden-tablet btn btn-red" href="/products/cart/{{sku}}">By now <span> @
                            {{price}}</span></a>
                </div>
            </div>
            <a class="addToCart show-tablet btn btn-red" href="/products/cart/{{sku}}">By now <span> @
                    {{price}}</span></a>
        </div>
        {{else}}
        <div class="w-100">
            <h3 class="text-center"> No Products found</h3>
        </div>
        {{/each}}
    </div>
</main>