<header class="header-wrapper">
    <div class="logo disp-inline-block float-left">
        <a href="/">
            <img class="logo-img" src="/images/logo.png" alt="Logo of Sabka bazar" >
        </a>
    </div>
    <div class="navigation disp-inline-block float-left">
        <ul>
            <li class="disp-inline-block navigation-list-item">
                <a href="/">Home</a>
            </li>
            <li class="disp-inline-block navigation-list-item">
                <a href="/products" class="plp_page_link">Product</a>
            </li>
        </ul>
    </div>
    <div class="disp-inline-block credentials-and-cart float-right">
        <ul class="credentials-wrapper">
            <li class="disp-inline-block credential-item">
                <a href="/login">Sign in</a>
            </li>
            <li class="disp-inline-block credential-item">
                <a href="/register">Register</a>
            </li>
        </ul>
        <div class="cart-container float-right">
            <a href="/cart">
                <span class="cart-icon"><i class="fa fa-shopping-cart fa-2x" aria-hidden="true"></i></span>
                <span class="cart-count">{{session.itemCounter}} Items</span>
            </a>
        </div>
    </div>
</header>