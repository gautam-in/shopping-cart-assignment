<header class="main-header">
    <div class="wrapper">
        <nav class="row">
            <div class="col-xs-4 col-md-3 main-header__logo">
                <a href="/"><img src="/static/images/logo_2x.png" alt="Sabka Bazar logo" class="logo"></a>
            </div>
            <div class="col-xs-8 col-md-9 main-header__navlist" id="header-nav">
                <!-- Hamburger Menu -->
                <label for="header-hamburger">&#9776;</label>
                <input type="checkbox" id="header-hamburger"/>
                <div class="main-header__navlinks">
                    <ul class="main-header__main-nav left">
                        <li><a href="/">{{menuHome}}</a></li>
                        <li><a href="/product-listing">{{menuProduct}}</a></li>
                    </ul>
                    <ul class="main-header__main-nav right end-xs">
                        <li><a href="/login">{{menuLogin}}</a></li>
                        <li><a href="/register">{{menuRegister}}</a></li>
                    </ul>
                </div>
                <span>
                    <a href="/cart" class="main-header__cart">
                        <i class="main-header__carticon">
                            <svg version="1.1" id="Layer_1" focusable="false" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
                                x="0px" y="0px" viewBox="0 0 24 24" style="enable-background:new 0 0 24 24;" xml:space="preserve">
                                <path d="M7 18c-1.1 0-1.99.9-1.99 2S5.9 22 7 22s2-.9 2-2-.9-2-2-2zM1 2v2h3l3.6 7.59-1.35 2.45c-.16.28-.25.61-.25.96 0 1.1.9 2 2 2h12v-2H7.42c-.14 0-.25-.11-.25-.25l.03-.12.9-1.63h7.45c.75 0 1.41-.41 1.75-1.03l3.58-6.49A1.003 1.003 0 0 0 20 4H5.21l-.94-2H1zm16 16c-1.1 0-1.99.9-1.99 2s.89 2 1.99 2 2-.9 2-2-.9-2-2-2z"/>
                            </svg>
                            <span id="cart_counter_mobile">{{totalCounter}}</span>
                        </i>
                        <span class="main-header__cart-items" id="cart_counter">{{totalCounter}} {{cartItem}}</span>
                    </a>
                </span>
            </div>
        </nav>
    </div>          
</header>