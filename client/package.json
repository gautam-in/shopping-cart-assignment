{
    "name": "sabka-bazaar",
    "version": "1.0.0",
    "private": true,
    "dependencies": {
        "axios": "^0.27.2",
        "bootstrap": "^5.1.3",
        "craco-less": "^1.17.0",
        "env-cmd": "^10.1.0",
        "formik": "^2.2.6",
        "react": "^16.13.1",
        "react-bootstrap": "^2.0.2",
        "react-dom": "^16.13.1",
        "react-router-dom": "^5.2.0",
        "react-scripts": "3.4.3",
        "react-slick": "^0.28.1",
        "sass": "^1.43.2",
        "wretch": "^1.7.2",
        "yup": "^0.32.11"
    },
    "scripts": {
        "start": "craco start --no-cache",
        "build:development": "env-cmd -f .env.development craco build",
        "build:qa": "env-cmd -f .env.qa craco build",
        "build:production": "env-cmd -f .env.production craco build",
        "typescript": "tsc --noEmit",
        "test": "craco test",
        "lint": "eslint './src/**/*.{ts,tsx}' --fix",
        "test-coverage": "craco test --coverage --watchAll"
    },
    "jest": {
        "collectCoverageFrom": [
            "**/*.{js,jsx,ts,tsx}",
            "!**/node_modules/**",
            "!**/vendor/**"
        ]
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@craco/craco": "^5.7.0",
        "@testing-library/jest-dom": "^5.11.9",
        "@testing-library/react": "^11.2.5",
        "@testing-library/react-hooks": "^3.7.0",
        "@testing-library/user-event": "^7.2.1",
        "@types/jest": "^24.9.1",
        "@types/node": "^12.19.8",
        "@types/react": "^16.9.51",
        "@types/react-dom": "^16.9.8",
        "@typescript-eslint/eslint-plugin": "^4.11.1",
        "@typescript-eslint/parser": "^4.11.1",
        "eslint-config-prettier": "^6.12.0",
        "eslint-config-react": "^1.1.7",
        "eslint-plugin-jest": "^24.1.3",
        "eslint-plugin-prefer-arrow": "^1.2.2",
        "eslint-plugin-prettier": "^3.1.4",
        "prettier": "^2.1.2",
        "typescript": "^3.9.7"
    }
}
