{{>../layout/header/header header=headerLayoutController}}

<div class="home-wrapper">

    <div class="home-content">
        <div class="carousel-layout">
            <div class="slideshow-container">
                {{#each cuurentRouteData.banners}}

                <div class="mySlides fade">
                    <div class="numbertext">1 / 3</div>
                    <img src="{{bannerImageUrl}}"  alt="{{bannerImageAlt}}" style="width:100%">
                    <div class="text"></div>
                </div>
                {{/each}}

                <a class="prev" onclick="plusSlides(-1)">❮</a>
                <a class="next" onclick="plusSlides(1)">❯</a>
            </div>
            <br>
            <div style="text-align:center">
                {{#each cuurentRouteData.banners}}
                <span class="dot"></span>

                {{/each}}
            </div>
        </div>

        <section class="categories container">
            {{#each cuurentRouteData.categoryList}}
            <div class="categories__item">
                <div>
                    <img src="{{imageUrl}}" alt="{{key}}fruits">
                </div>
                <div>
                    <h1>{{name}}</h1>
                    <p>{{description}}</p>
                    <button type="button" class="btn">Explore {{name}}</button>
                </div>
            </div>
            {{/each}}
        </section>

    </div>

</div>


{{#if headerLayoutController.cartState}}

<div class="sideModal">
    <div class="sideModal-item">
        {{> ../controllers/cart/cart header=headerLayoutController}}
    </div>
</div>
{{/if}}