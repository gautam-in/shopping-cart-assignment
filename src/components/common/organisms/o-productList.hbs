<div class="row">
	{{#each products}}
	<div class ="col col-xs-12 col-sm-6 col-lg-3 product-block">
		<p class="product-name">{{name}}</p>
		<div class="row flex">
			<div class ="col col-xs-6 col-sm-7 col-lg-12">
				<img src={{imageURL}} alt={{name}}>
			</div>
			<div class="col col-xs-6 col-sm-5 col-lg-12">
				<p>{{description}}</p>
				<button data-id ="{{json this}}">Buy now @ Rs.{{price}}</button>
			</div>
		</div>
	</div>
	{{/each}}
</div>