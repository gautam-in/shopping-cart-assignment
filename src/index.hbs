{{#each categories}}
    <div class="row">
        <div class="col-6 product-image-wrapper">
            <img src={{imageUrl}} alt={{name}} class="product-image">
        </div>
        <div class="col-6 product-desc-area text-center">
            <label class="fw-bold">{{name}}</label>
            <p>{{description}}</p>
            <button class="btn shopping-btn">Explore {{key}}</button>
        </div>
    </div>
{{/each}}
