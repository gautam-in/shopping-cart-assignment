
<section class="product-listing-wrap top-padding plp-section">
    <div class="wrapper">
        <div class="row">
            <div class="product-filter col-md-3 col-xs-12" id="page-nav">
                <!-- [THE HAMBURGER] -->
                <label for="product-hamburger">Fruits &amp; Vegetables</label>
                <input type="checkbox" id="product-hamburger" />
                <ul class="product-categories">

                    {{#each categories}}
                    <li><a href="/product/{{this.id}}">{{this.name}} </a> </li>
                    {{/each}} </ul>

            </div>
            <div class="product-list col-md-9 col-xs-12">
                <div class="product-detail row">
                    {{#each prodHbs}}
                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <div class="product-box row">
                            <h3 class="col-xs-12">{{this.name}}</h3>
                            <div class="col-xs-6 col-sm-6 col-md-12
                                product-image">
                                <img src="{{this.imageURL}}" alt="{{this.name}}"
                                    class="width-100">
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-12
                                product-description">
                                <p class="description-box">{{this.description}}</p>
                                <div class="product-pricing">
                                    <a href="#" class="button-small">Buy Now
                                        <span>MRP Rs.{{this.price}}</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</section>
<!-- The Modal -->
<div id="cart-modal-id" class="cart-modal">
    <!-- Modal content -->
    <div class="cart-modal-content">
        <!-- Modal header -->
        <div class="cart-modal-header">
            <span class="close">&times;
            </span>
            <h4>My Cart
            </h4>
        </div>
        <!-- Modal body -->
        <div class="cart-modal-body">
            <h4>No items in your cart
            </h4>
            <h6>Your Favourite items are just a click away
            </h6>
        </div>
        <!-- Modal footer-->
        <div class="cart-modal-footer">
            <button class="cart-modal-footer-text">Start Shopping
            </button>
        </div>
    </div>
</div>
