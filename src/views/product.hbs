<section class="product top-padding">
  <div class="wrapper">
    <div class="row">
      <div class="product__filter col-md-3 col-xs-12" id="page-nav">
        <!-- [THE HAMBURGER] -->
        <label for="product__filter__hamburger">Fruits &amp; Vegetables</label>
        <input type="checkbox" id="product__filter__hamburger" />
        <ul class="product__filter__categories">
          {{#each categories}}
            <li><a href="/product/{{this.id}}">{{this.name}} </a> </li>
          {{/each}}
        </ul>
      </div>
      <div class="product__list col-md-9 col-xs-12">
        <div class="product__list__detail row">
          {{#each productList}}
            <div class="col-xs-12 col-sm-6 col-md-3">
              <div class="product__list__detail__box row">
                <h3 class="col-xs-12">{{this.name}}</h3>
                <div class="col-xs-6 col-sm-6 col-md-12">
                  <img
                    src="{{this.imageURL}}"
                    alt="{{this.name}}"
                    class="product__list__detail__box__img"
                  />
                </div>
                <div class="col-xs-6 col-sm-6 col-md-12">
                  <p
                    class="product__list__detail__description"
                  >{{this.description}}</p>
                  <div class="product__list__detail__pricing">
                    <a
                      href=""
                      class="button__small product__card__buy--btn"
                      id={{id}}
                    >Buy Now
                      <span>MRP Rs.{{this.price}}</span>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</section>
<script type="text/javascript" src="/js/product.js"></script>