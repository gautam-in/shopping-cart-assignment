<section class="banner-wrapper">
             <div class="home-slider">
                <div class="home-slider-offers">
                    {{#each banners}}
                        {{> components/molecules/m-banner-image}}
                    {{/each}}
                    <button class="prev" onClick="plusSlides(-1)" aria-label="button for previous slide" tabindex="0">prev</button>
                    <button class="next" id="next" onClick="plusSlides(1)" aria-label="button for next slide" tabindex="0">next</button>
                    <div class="dots">
                        {{#each banners}}
                        <span class="dot" onclick="currentSlide({{@index}})" tabindex="0"></span>
                        {{/each}}
                    </div>

                </div>
            </div>
        </section> 
        
        <section>
            <div id="category-list">
             
            {{#each categories}} {{#is this.class "odd"}}
                <div class="category">
                    {{> components/molecules/m-category-image}}
                     {{> components/molecules/m-category-details}}
                </div>
                {{/is }} {{#is this.class "even"}}
                <div class="category">
                    {{> components/molecules/m-category-details}}
                    {{> components/molecules/m-category-image}}
                </div>
                {{/is }} {{/each}}  
        </div>
    </section>
</section>
