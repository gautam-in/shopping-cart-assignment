<div class="content-area">
            <section class="login-text-details">
                {{> components/atoms/a-header header="Signup"}}
                {{> components/atoms/a-paragraph para="We do not share your personal details with anyone"}}
            </section>
            <section class="login-form">
                <h2 class="mobile-view-title">Signup</h2>
                <form action="/register/post" class="form" method="POST" novalidate>

                    {{> components/molecules/m-input name="fname" placeholder="" label="FirstName" type="text"}}
                    {{> components/molecules/m-input name="lname" placeholder="" label="LastName" type="text"}}
                    {{> components/molecules/m-input name="email" placeholder="" label="Email" type="email"}}
                    {{> components/molecules/m-input name="psw" placeholder="" label="Password" type="password"}}
                    {{> components/molecules/m-input name="psw-repeat" placeholder="" label="Confirm Password" type="password"}}
                    {{> components/molecules/m-button name="Signup" type="submit"}}
                
                </form>
            </section>
        </div>