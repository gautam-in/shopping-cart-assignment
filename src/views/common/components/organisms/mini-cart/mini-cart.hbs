<div class="modal-window" id="cart" tabindex="0">
    <div class="modal-container">
    <div class="modal-header my-cart">
        <div class="modal-header-title">
            <h2>My Cart</h2>
        </div>
        <div class="cart-header-close" onclick="common.closeShoppingCart(event)" tabindex="0">
            {{> components/atoms/a-img src="/static/images/cancel.png" alt="close"}}
        </div> 
    </div>
    <div class="modal-body" id="modal-body-content">
        <!-- start cart list container -->
        <div class="items"></div>
        <div class="cart-button"></div>
        <!-- end cart list container -->
    </div>
    </div>
</div>